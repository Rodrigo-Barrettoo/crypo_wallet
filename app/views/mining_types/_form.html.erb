<%= form_with(model: mining_type, local: true) do |form| %>
  <% if mining_type.errors.any? %>
    <div id="error_explanation">

     <div class="alert alert-danger" role="alert">
        <h3>
          <%= pluralize(mining_type.errors.count, t("erro_mining_type") ) %>
        </h3>

        <% mining_type.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: "btn btn-success mt-2 mb-2" %>
  </div>
<% end %>
